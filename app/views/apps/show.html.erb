<p>
  <%= render @app.categories %>
</p>

<%= link_to('Edit app post', edit_app_path(@app)) if logged_in? %>

<h4><%= @app.title %></h4>
<p>Description: 
  <br/>
  <%= @app.description%></p>
<p>Functions:
  <br/>
  <%= @app.functions%></p>

<% if logged_in? %>
  <div class='well'>
    <%= form_for [@app, @comment] do |f| %>
    <%= render 'shared/errors', obj: @comment %> 
     <%= f.label :body, 'Leave a comment' %>
      <%= f.text_field :body, rows: 3, class: 'span 4' %>
      </div>
    <%= f.submit 'Create comment', class: 'btn btn-primary' %>
    <% end %>
  </div>
<% end %>

<h5>Comments: </h5>
  <% @app.reload.comments.each do |comment| %>
  <%= render 'comments/comment', comment: comment %>
  <% end %>

